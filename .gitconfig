[user]
	name = gashon
	email = gashon96@gmail.com

[core]
    editor = vim

[push]
    default = simple

[fetch]
    prune = false

[diff]
    tool = vimdiff 

[merge]
    tool = vimdiff  
    ff = only

[rerere]
    enabled = true

[color]
    ui = auto
    branch = auto
    diff = auto
    status = auto

[commit]
	gpgSign = true
	signingkey = EEE67F1C0D8C9AB1

[mergetool "vimdiff"]
    cmd = vimdiff "$BASE" "$LOCAL" "$REMOTE" "$MERGED"
    trustExitCode = true

[interactive]
    diffFilter = delta --color-only

[delta]
    features = zebra
    syntax-theme = Monokai

[init]
    defaultBranch = main

[core]# Global .gitignore file
    excludesfile = ~/.gitignore_global  

[credential "https://github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
