#!/bin/bash

set -e

key_id=105C0EA283243616693BB63E7D6F10FE98464D3F
file=$1

echo -e "\nkey_id: $key_id\ntarget: $file\n"

without_extension=$(echo "$file" | cut -d'.' -f1)
rest_of_file=$(echo "$file" | cut -d'.' -f2- | sed 's/\.gpg//')
output_file="${without_extension}.decrypted.${rest_of_file}"

gpg --decrypt --recipient "$key_id" --output "${output_file}" "$file"
